<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/editTextNotebook"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="top"
        android:hint="כתוב כאן מידע אודות הלימוד"
        android:inputType="textMultiLine"
        android:minLines="10" />

    <Button
        android:id="@+id/buttonSaveNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="שמור" />

    <Button
        android:id="@+id/buttonDelet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="מחק" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp">


        <Button
            android:id="@+id/buttonSaveToCloud"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="שמור בענן" />

        <Button
            android:id="@+id/buttonLoadFromCloud"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="שחזור מהענן" />

    </LinearLayout>

</LinearLayout>